@{
    ViewData["Title"] = "Recommend a Restaurant";
}
@model Recommendation
<div>
    <form method="post" asp-action="Recommend">
        <label asp-for="name">Name: </label>
        <input type="text" asp-for="name"/>

        <label asp-for="restaurantName">Restaurant Name: </label>
        <input type="text" asp-for="restaurantName"/>

        <label asp-for="favoriteDish">Favorite Dish: </label>
        <input type="text" asp-for="favoriteDish" />

        <label asp-for="phone">Restaurant Phone: </label>
        <input type="tel" asp-for="phone"/>
        <input type="submit" />
        <div asp-validation-summary="All"></div>
    </form>
</div>